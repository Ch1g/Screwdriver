<div class="container-fluid">
	<div class="row">
		<!-- fixed sidebar -->
		<div class="col-3 games-sidebar">
			<!-- welcome card -->
	        <div class="card no-outline usercard">
		        <div class="card-body">
		          Алоха,<br>
		          <b><%= current_user.username %><br></b>
		        </div>
	        </div>
	        <!-- games list -->
		    <div class="games">
	    		<%= render 'landing/games_list' %>
		    </div>
	  	</div>
	  	<!-- end of fixed sidebar -->
	  	<!-- chat -->
		<div class="col-9">
			<div class="chat">
				<nav class="navbar navbar-dark bg-secondary">
					<span class="navbar-brand">Чатрума</span>
				</nav>
				<div id="messages">					
					<%= render 'messages/last_messages'%>
				</div>
				<div class="chat-box">
					<%= render 'messages/form', message: Message.new %>
				</div>
			</div>
		</div>
		<!-- end of chat -->
	</div>
</div>

<!-- popovers initializing -->
<script>
	lobbyConnection(<%= current_user.id %>);
	$(document).ready(function(){
	  $('[data-toggle="popover"]').popover();
	});
	$('.gamecard').popover({
	  trigger: 'hover',
	  placement: 'right',
	  boundary: 'window'
	})
</script>